<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KevinHartsFriendJB.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" />
            <Label
                Text="Pick a die!"/>
            <RadioButton 
                Content="D4"
                x:Name="d4"/>
            <RadioButton 
                Content="D6"
                x:Name="d6"
                IsChecked="True"/>
            <RadioButton 
                Content="D10"
                x:Name="d10"/>
            <RadioButton 
                Content="D12"
                x:Name="d12"/>
            <Button
                x:Name="CounterBtn"
                Text="Roll a die" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Label
                x:Name="rollValue"
                Text="Roll result"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
